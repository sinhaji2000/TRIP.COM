pipeline{

   agenta any

   stages{
        stage('build'){
            agent {
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    ls -l
                    
                    npm install
                    npm --version
                    npm run build
                    ls -l

                '''
            }
        }
   }
}