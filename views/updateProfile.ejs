
<div class="bg-gray-100 min-h-screen flex items-center justify-center">

  <!-- Update Profile Card -->
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h1 class="text-2xl font-semibold text-gray-800 text-center mb-6">Update Profile</h1>

    <form action="/user/updateProfile/<%= profile._id %>" method="POST" class="space-y-4" enctype="multipart/form-data">
      <!-- Hidden ID Field -->
      <input type="hidden" name="_id" value="<%= profile._id %>">

      <!-- Name Input -->
      <div>
        <label for="name" class="block text-gray-600 font-medium mb-1">Name</label>
        <input 
          type="text" 
          name="name" 
          id="name" 
          value="<%= profile.name %>" 
          required 
          class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:ring focus:ring-indigo-200 focus:border-indigo-400">
      </div>
      <div>
        <label for="avatar" class="block text-sm font-medium text-gray-700">Profile Picture</label>
        <div class="mt-1">
            <input type="file" id="avatar" name="avatar" accept="image/*" required
                class="block w-full text-sm text-gray-500 border border-gray-300 rounded-xl shadow-sm cursor-pointer 
                focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300">
            <p class="mt-2 text-xs text-gray-500">Accepted file types: JPG, PNG, GIF (Max: 2MB).</p>
        </div>
    </div>

      <!-- Password Input -->
      <div>
        <label for="password" class="block text-gray-600 font-medium mb-1">Password</label>
        <input 
          type="password" 
          name="password" 
          id="password" 
          placeholder="Enter new password" 
          required 
          class="w-full px-4 py-2 border rounded-lg text-gray-700 focus:ring focus:ring-indigo-200 focus:border-indigo-400">
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <button 
          type="submit" 
          class="w-full bg-indigo-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-indigo-700 transition">
          Update Profile
        </button>
      </div>
    </form>
  </div>

</div>

